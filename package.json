{
  "name": "videojuke",
  "version": "1.0.0",
  "main": "main.js",
  "description": "A random video player with queue management and smooth transitions",
  "author": "",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "electron .",
    "start:standalone": "npm run start:both",
    "start:both": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "node src/server/standalone-server.js",
    "start:client": "node src/client/standalone-client.js",
    "start:electron": "electron .",
    "dev": "electron . --dev",
    "dev:server": "nodemon src/server/standalone-server.js",
    "dev:client": "nodemon src/client/standalone-client.js",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "electron": "^36.3.2",
    "fluent-ffmpeg": "^2.1.3",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "glob": "^11.0.2",
    "mime-types": "^3.0.1",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "open": "^9.1.0"
  },
  "build": {
    "appId": "com.example.videojuke",
    "productName": "VideoJuke",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}